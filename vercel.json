{
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/absensi",
            "destination": "/absensi/index.html"
        },
        {
            "source": "/absensi/(.*)",
            "destination": "/absensi/$1"
        },
        {
            "source": "/((?!api|absensi|.*\\\\..*).*)",
            "destination": "/index.html"
        }
    ]
}